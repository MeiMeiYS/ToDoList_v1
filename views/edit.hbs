<form action="/todos/{{ todo._id }}?_method=PUT" method="POST">
    <div class="input-group mb-3">
        <div class="input-group-text">
            <input class="form-check-input mt-0" style="padding-right: 10px; padding-bottom:10px;" type="checkbox" name="isDone"
                aria-label="Checkbox for following text input" {{#if todo.isDone }} checked {{/if}}>
        </div>
        <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>